<h1>List of Authors</h1>
{% if tabAuthors is empty %}
<h3>le tableau est vide</h3>
{% else %}
{% set x=0 %}
<table border="1">
    <tr>
        <th>Id</th>
        <th>username</th>
        <th>Email</th>
        <th>Nb Books</th>
        <th>Action</th>
    </tr>
    {% for i in tabAuthors %}
        <tr>
            <td>{{ i.id }}</td>
            <td> {{ i.username | upper }}</td>
            <td>{{ i.email }}</td>
            <td> {{ i.nb_books }}</td>
            <td><a href="{{ path('detail_author', {'id': i.id}) }}">details</a></td>
        </tr>
        {% set x=x+i.nb_books %}
    {% endfor %}

</table>
<h4>Nb authors: {{tabAuthors|length}}</h4>
<h4>Nb books: {{x}}</h4>
{% endif %}